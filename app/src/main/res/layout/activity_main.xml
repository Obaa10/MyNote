<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:button_color="@color/tabs_layout_button"
        app:icon_one="@drawable/ic_baseline_archive_24"
        app:icon_three="@drawable/ic_baseline_access_alarm_24"
        app:icon_two="@drawable/ic_baseline_event_note_24"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:number_of_tabs="three_IconOnly"
        app:starting_position="two"
        app:tab_color="@color/tabs_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>